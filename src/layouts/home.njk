---
layout: base
---

<header class="hero">
  <div class="hero-content">
    <div class="intro">
      {{ content | safe }}
    </div>
  </div>
</header>

<section class="post-list__wrapper">
  <h2 class="post-list__heading">Recent Posts</h2>

  {% set postslist = collections.posts | head(-5) %}
  {% include "posts-list.njk" %}

</section>

{% if site.headerLinks %}
  <div class="all-posts-link">
    <a href="{{ site.headerLinks[0].url | safe }}">More posts</a>
  </div>
{% endif %}