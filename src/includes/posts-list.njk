<ul class="post-list">
  {% for post in postslist | reverse %}
    <li class="post-list__item">
      <div>

      </div>

      <h3 class="post-list__title">
        <a  href="{{ post.url }}">{{ post.data.title }}</a>
      </h3>
        <div class="post-list__meta">
          <time datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate }}
          </time>
          <span> | </span>
          <span>{{ post | readingTime }} read</span>
        </div>

      {% if post.data.coverimage %}
        <img src="{{ post.data.coverimage | safe }}" class="post-list_coverimage" alt="{{post.data.title}} cover image">
      {% endif %}

      <p class="post-list__excerpt">
          <div class="post-list__description">
            {% if post.data.description %}
              {{ post.data.description }}
            {% endif %}
            <a class="post-list__read-more" href="{{ post.url }}">read article</a>
          </div>
          <!-- {{ post.templateContent | excerpt | safe  }} -->
        
          <div class="post-list__tags">
          {% for tag in post.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a href="{{ tagUrl | url }}">#{{ tag }}</a>
            {%- endif -%}
          {% endfor %}
        </div>
      </p>
    </li>
  {% endfor %}
</ul>